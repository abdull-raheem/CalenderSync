<h1>Calendars</h1>

<%= link_to 'New Calendar', new_calendar_path, class: 'btn btn-primary' %>

<table class="table mt-3">
  <thead>
    <tr>
      <th>Name</th>
      <th>Time Zone</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.name %></td>
        <td><%= calendar.timezone %></td>
        <td>
          <%= link_to 'Show', calendar_path(calendar), class: 'btn btn-info btn-sm' %>
          <%= link_to 'Edit', edit_calendar_path(calendar), class: 'btn btn-warning btn-sm' %>
          <%= link_to 'Delete', calendar_path(calendar), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
